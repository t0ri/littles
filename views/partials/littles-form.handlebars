<fieldset>
  <legend>New Little</legend>
  <!-- TITLE -->
  <div class="form-group" name="type" id="type">
    <label for="littles-type">:/</label>
    <input class="form-control" type="radio" value="false" name="type"/>

    <label for="littles-type2">:)</label>
    <input class="form-control" type="radio" name="type" value="true"/>
  </div>

  <div class="form-group">
    <label for="littles-title">Title</label><br>
    <input class="form-control" id="title" type="text" name="title" value="{{littles.title}}"/>
  </div>

  <div class="form-group">
    <label for="littles-desc">Description</label><br>
    <input class="form-control" id="desc" type="text" name="desc" value="{{littles.desc}}"/>
  </div>
</fieldset>
